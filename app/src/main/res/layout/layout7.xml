<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/g_hguide"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".25"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/g_text"
        android:textSize="30sp"
        android:text="@string/hello"
        app:layout_constraintTop_toBottomOf="@id/g_hguide"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <include android:layout_height="400sp" android:layout_width="match_parent" app:layout_constraintTop_toBottomOf="@id/g_text" layout="@layout/mini7"/>

</androidx.constraintlayout.widget.ConstraintLayout>